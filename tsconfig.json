{
  "compilerOptions": {
    "pretty": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "target": "ES5",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src"
  },
  "include": ["src/*", "types/*"]
}
