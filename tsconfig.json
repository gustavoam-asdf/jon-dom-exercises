{
  "compilerOptions": {
    "pretty": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "target": "ES5",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@*": ["*"]
    }
  },
  "include": ["src/*"],
  "exclude": ["node_modules", "build"]
}
