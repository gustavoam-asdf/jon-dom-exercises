{
  "compilerOptions": {
    "pretty": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "experimentalDecorators": true,
    "declaration": true,
    "declarationDir": "./types",
    "noEmitOnError": true,
    "target": "ES5",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types", "./types"],
    "rootDir": "src"
  },
  "include": ["src/*", "types/*"]
}
